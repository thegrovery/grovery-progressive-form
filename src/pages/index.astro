---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro'; 
import ProgressiveForm from '../components/ProgressiveForm.astro';
---

<Layout title="Brand Health Analysis | The Grovery">
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section with Angled Bottom -->
    <div class="relative bg-gradient-to-r from-teal-600 to-zinc-800 pt-20 pb-32">
      <!-- Angled Bottom Edge -->
      <div class="absolute bottom-0 left-0 right-0 h-20 bg-gray-50" style="clip-path: polygon(0 100%, 100% 100%, 100% 0);"></div>
      
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
          <!-- Left Column: Hero Content -->
          <div class="text-white pt-8 pb-16 lg:pb-0">
            <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
              Get Your Free<br />Brand Health Report
            </h1>
            <p class="text-xl text-teal-100 mb-8 max-w-lg">
              Discover how your brand performs online with our comprehensive analysis of sentiment, search visibility, and market position.
            </p>
            <ul class="space-y-3">
              {['AI-powered brand sentiment analysis', 'Search engine visibility assessment', 'Competitive positioning insights', 'Actionable recommendations'].map(item => (
                <li class="flex items-center">
                  <svg class="h-5 w-5 text-teal-300 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Right Column: Empty for desktop (form will overlap) -->
          <div class="hidden lg:block"></div>
        </div>
      </div>
    </div>
    
    <!-- Form Section (Overlapping on Desktop) -->
    <div class="max-w-7xl relative mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-2 lg:gap-8">
        <!-- Left Column: Empty on desktop -->
        <div class="hidden lg:block"></div>
        
        <!-- Right Column: Form Card (Overlapping on desktop) -->
        <div class="-mt-28 lg:-mt-[28rem] mb-16 z-10">
          <div class="bg-white rounded-xl shadow-xl overflow-hidden ring-1 ring-gray-200">
            <div class="p-8">
              <ProgressiveForm />
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Features Section -->
    <div class="bg-gray-50 py-16">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-12">How Our Brand Analysis Works</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {[
            {
              title: 'AI-Powered Analysis',
              description: 'Our advanced AI analyzes brand sentiment across news articles and online mentions.',
              icon: 'M13 10V3L4 14h7v7l9-11h-7z'
            },
            {
              title: 'Search Visibility',
              description: 'We assess your brand\'s search engine visibility and competitive positioning.',
              icon: 'M8 16l2.879-2.879m0 0a3 3 0 104.243-4.242 3 3 0 00-4.243 4.242zM21 12a9 9 0 11-18 0 9 9 0 0118 0z'
            },
            {
              title: 'Actionable Insights',
              description: 'Get clear recommendations to improve your brand\'s online presence and perception.',
              icon: 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2'
            }
          ].map(feature => (
            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="w-12 h-12 bg-teal-100 text-teal-600 rounded-full flex items-center justify-center mb-4">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon}></path>
                </svg>
              </div>
              <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Call to Action -->
    <div class="bg-gradient-to-r from-zinc-800 to-teal-500 py-16">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-white mb-4">Ready to strengthen your brand?</h2>
        <p class="text-xl text-blue-100 mb-8">Get your free brand health report today and discover actionable insights.</p>
        <a href="#top" class="inline-block bg-white text-blue-600 font-bold py-3 px-8 rounded-lg shadow-md hover:bg-blue-50 transition-colors">
          Get Started
        </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }
</style>
