---
// BlurOverlay.astro - Reusable blur overlay with CTA for lead generation
interface Props {
  height?: string;  // Height of the overlay (default: h-48)
  ctaText?: string; // Text above the button
  buttonText?: string; // Button text
  buttonUrl?: string; // URL for the button
}

const { 
  height = "h-80", 
  ctaText = "Want a complete report?", 
  buttonText = "Contact us for Greenhouse&trade; Review",
  buttonUrl = "https://thegrovery.com/contact"
} = Astro.props;
---

<div class={`absolute bottom-0 left-0 right-0 ${height} bg-gradient-to-t from-white via-white/90 to-transparent flex flex-col items-center justify-end pb-20 rounded-b-xl`}>
  <p class="text-gray-700 font-medium mb-3">{ctaText}</p>
  <a href={buttonUrl} class="inline-flex items-center px-4 py-2 bg-gradient-to-br from-zinc-700 to-teal-700 hover:from-zinc-600 hover:to-teal-600 text-white font-medium rounded-lg transition-colors">
    {buttonText}
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </a>
</div> 